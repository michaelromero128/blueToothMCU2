<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/temporaryTextViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:text="name" />

    <TextView
        android:id="@+id/temporaryTextViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temporaryTextViewPhoneNumber"
        android:layout_alignLeft="@+id/temporaryTextViewPhoneNumber"
        android:layout_alignBottom="@+id/temporaryTextViewPhoneNumber"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-89dp"
        android:text="address" />

    <TextView
        android:id="@+id/temporaryTextViewPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/temporaryTextViewName"
        android:layout_alignLeft="@+id/temporaryTextViewName"
        android:layout_alignBottom="@+id/temporaryTextViewName"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="-43dp"
        android:text="phone" />

    <Button
        android:id="@+id/temporaryToDetailsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/temporaryTextViewPhoneNumber"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="-18dp"
        android:layout_toEndOf="@+id/temporaryTextViewPhoneNumber"
        android:layout_toRightOf="@+id/temporaryTextViewPhoneNumber"
        android:text="details" />
</RelativeLayout>
