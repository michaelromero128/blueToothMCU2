<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.DetailsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/detailsFragmentGridLayout"
        android:layout_width="359dp"
        android:layout_height="424dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:columnCount="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsImageView"
        app:orientation="horizontal"
        app:rowCount="8">

        <Button
            android:id="@+id/detailsButtonToggleFavorite"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:background="@drawable/ic_iconmonstr_favorite_toggle_on"
            app:layout_column="5"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewDetailsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textViewDetailsIs_Closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Closed"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textViewsDetailsAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15271 sw 147 ave, Miami Fl 33187"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_rowSpan="2"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textViewDetailsRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textViewDetailCategories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chineese Pizzeria"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textViewDetailsPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3052557834"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="6" />

        <TextView
            android:id="@+id/textViewDetailsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$$$"
            app:layout_column="2"
            app:layout_columnSpan="3"
            app:layout_row="7" />
    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/detailsImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

</androidx.constraintlayout.widget.ConstraintLayout>